<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tfman"
    tools:context=".MainActivity"
    xsi:schemaLocation="http://schemas.android.com/apk/res-auto ">

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="27dp"
        android:text="30"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/ques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/timerText"
        android:layout_centerHorizontal="true"
        android:text="a+b"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/scoreCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/timerText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="0dp"
        android:text="0/0"
        android:textSize="35sp" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/chooseAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/timerText"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="134dp">

        <Button
            android:id="@+id/button"
            android:layout_width="160dp"
            android:layout_height="86dp"
            android:background="@drawable/godplsssss"
            android:onClick="chooseAns"
            android:tag="0"
            android:text="Button"
            android:textColorLink="@color/colorAccent" />

        <Button
            android:id="@+id/button6"
            android:layout_width="160dp"
            android:layout_height="86dp"
            android:background="@drawable/godplsssss"
            android:onClick="chooseAns"
            android:tag="2"
            android:text="Button"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/button5"
            android:layout_width="160dp"
            android:layout_height="86dp"
            android:background="@drawable/godplsssss"
            android:onClick="chooseAns"
            android:tag="3"
            android:text="Button" />

        <Button
            android:id="@+id/button7"
            android:layout_width="160dp"
            android:layout_height="86dp"
            android:background="@drawable/godplsssss"
            android:onClick="chooseAns"
            android:tag="1"
            android:text="Button"
            app:layout_column="1"
            app:layout_row="0" />
    </android.support.v7.widget.GridLayout>

    <Button
        android:id="@+id/button8"
        android:layout_width="335dp"
        android:layout_height="151dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="192dp"
        android:background="@drawable/hmmmm"
        android:onClick="onGo"
        android:text="GO!"
        android:textSize="60sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/bleh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button8"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-30dp"
        android:text="CORRECT!"
        android:textSize="35sp" />

    <Button
        android:id="@+id/playA"
        android:layout_width="104dp"
        android:layout_height="52dp"
        android:layout_below="@+id/bleh"
        android:layout_alignStart="@+id/ques"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="39dp"
        android:background="@drawable/download"
        android:onClick="playAgain"
        android:text="Play Again!"
        android:visibility="invisible" />

</RelativeLayout>